<h3>DataSet</h3>
<br />
<h4>Debug print</h4>
<%= params %>
<br />
<h4>File selection</h4>
<%= form_tag('/data_set', :multipart => true) do %>
<%= file_field :file, :name %>
<%= submit_tag 'load' %>
<% end %>

<hr />
<h4>All Sample</h4>
<% Sample.all.each do |sample| %>
  <%= sample.to_hash.to_a.flatten %><br />
<% end %>
<h4>All Data Set</h4>
<table>
<% DataSet.all.each do |data_set| %>
  <tr><td><%= data_set.id %></td><td><%= button_to 'Save CSV', :action=>:save_as_csv, :data_set_id=>data_set.id %></td></tr>
<% end %>
</table>
<br />
<h4>Loaded Data Set</h4>
<hr />
<% if @data_set %>
<table>
  <tr>
    <% @data_set.headers.each do |header| %>
      <th><%= header %></th>
    <% end %>
  </tr>
  <% @data_set.samples.each do |sample| %>
    <tr>
      <% @data_set.headers.each do |header| %>
        <td><%= File.basename(sample.to_hash[header].to_s) %></td>
      <% end %>
    </tr>
  <% end %>
</table>
<% end %>

