<h1>Project <%= session[:project] %></h1>
hoge: <%= @hoge %><br />
params: <%= params %><br />
<%= image_tag('back.gif') %>
<%= link_to "Backto DataSet #{@data_set.name}", "/data_set/#{@data_set.id}", :method=>:get %>
<hr />
<h3>Samples</h3>
<% if @data_set %>
<table>
  <tr>
    <th></th>
    <% @data_set.headers.each do |header| %>
      <th><%= header %><%= link_to image_tag('minus.png'), "/sample/#{@data_set.id}/edit", :method=>:post %></th>
    <% end %>
    <th><%= link_to image_tag('add.png'), "/sample/#{@data_set.id}/edit", :method=>:post %></th>
  </tr>
  <% @data_set.samples.each do |sample| %>
    <tr>
      <td>
        <%= link_to image_tag('minus.png'), "/sample/#{@data_set.id}/edit", :method=>:post %>
      </td>
      <% @data_set.headers.each do |header| %>
        <td>
          <% file_path = sample.to_hash[header].to_s %>
          <% file_name = File.basename(file_path) %>
          <%= file_name %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
  <%= link_to image_tag('add.png'), "/sample/#{@data_set.id}/edit", :method=>:post %>
  <%= button_to 'edit sample', "/sample/#{@data_set.id}/edit" %>
<% end %>
<hr />

