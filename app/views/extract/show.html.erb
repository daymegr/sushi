<h1>Extract <%= @extract[:@id] %></h1>
<p>Here are listed all the resources for the extract.</p>
<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Size</th>
    <th>Actions</th>
  </tr>
  <% @resources.each do |r| %>
  <tr>
    <td><%= r[:@id] %></td>
    <td><%= r[:name] %></td>
    <td><%= r[:size] %></td>
    <td><%= link_to "add to plate", "/resource/add_to_basket/"+r[:@id] %></td>
  </tr>
  <% end %>
</table>
